<?xml version="1.0" encoding="utf-8"?>


<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        
        <import type="android.view.View"/>
        
        <variable
            name="movie"
            type="com.ltu.m7019e.v23.themoviedb.model.Movie" />
        <variable
            name="movieDetail"
            type="com.ltu.m7019e.v23.themoviedb.network.MovieDetailsResponse" />
        <variable
            name="viewModel"
            type="com.ltu.m7019e.v23.themoviedb.viewModel.MovieDetailViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MovieDetailFragment">

        <ImageView
            android:id="@+id/status_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars" />


        <ImageView
            android:id="@+id/movie_detail_backdrop"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:backdropImageUrl="@{movie.backdropPath}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@tools:sample/avatars"
            android:contentDescription="@string/shows_the_movie_backdrop_image"/>


        <Button
            android:id="@+id/to_movie_review_fragment_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="@string/go_third_fragment"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/movie_detail_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@{movie.title}"
            tools:text="Movie title"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/movie_detail_backdrop" />

        <TextView
            android:id="@+id/genre_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="4dp"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/movie_detail_title"
            />

        <TextView
            android:id="@+id/url_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{movieDetail.homepage}"
            android:textColor="@color/teal_700"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/genre_text" />

        <TextView
            android:id="@+id/imdb_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{@string/imdb_link_base_url + movieDetail.imdb_id}"
            android:textColor="@color/teal_700"
            app:layout_constraintBottom_toTopOf="@+id/to_movie_review_fragment_btn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/url_link" />

        <Button
            android:id="@+id/save_to_database"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:onClick="@{() -> viewModel.onSaveMovieButtonClicked(movie)}"
            android:visibility="@{viewModel.isFavorite ? View.GONE : View.VISIBLE}"
            android:text="@string/save_locally"
            app:layout_constraintBottom_toTopOf="@+id/to_movie_review_fragment_btn"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/remove_from_datanase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="@string/remove_locally"
            android:onClick="@{() -> viewModel.onRemoveMovieButtonClicked(movie)}"
            android:visibility="@{viewModel.isFavorite ? View.VISIBLE : View.GONE}"
            app:layout_constraintBottom_toTopOf="@+id/to_movie_review_fragment_btn"
            app:layout_constraintEnd_toEndOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>